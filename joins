SELECT A.id,A.display_name,B.name as BrandName, D.name as categoryName, A.info_text as description, A.age as Year_old, A.country_of_origin as origin,  A.original_price_per_unit,A.sale_price_per_unit,CONCAT(A.unit_size, A.unit_type) as bottle_volume_size,A.alcohol_percentage as ABV,A.pack_info from tbl_products A LEFT OUTER JOIN tbl_product_brands B ON B.id=A.brand_id LEFT OUTER JOIN tbl_products_images C ON C.id =A.primary_image_id LEFT OUTER JOIN tbl_product_cats D ON D.id=A.cat_id WHERE A.archived='N' AND A.enabled='Y'

















